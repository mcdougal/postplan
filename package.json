{
  "name": "postplan",
  "version": "0.0.1",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "npm run db:migrate && npm run build -w @postplan/app",
    "check": "npx npm-check --skip-unused",
    "db:generate": "npm run generate -w @postplan/db",
    "db:migrate": "npm run migrate -w @postplan/db",
    "db:start": "npx supabase start",
    "delta-lint:code": "npm run delta-lint:code --workspaces --if-present",
    "delta-lint:markdown": "markdownlint **/*.md",
    "delta-lint": "run-p delta-lint:**",
    "dev": "npm run dev -w @postplan/app",
    "job": "npm run job -w @postplan/app",
    "lint:code": "npm run lint:code --workspaces --if-present",
    "lint:markdown": "markdownlint **/*.md",
    "lint": "run-p lint:**",
    "lt:app": "lt --subdomain postplan-cedric-app --port 3000",
    "lt:supabase": "lt --subdomain postplan-cedric-supabase --port 54321",
    "postinstall": "npm run build -w @postplan/eslint-plugin",
    "prepare": "husky",
    "start": "npm run start -w @postplan/app",
    "types": "npm run types --workspaces --if-present"
  },
  "devDependencies": {
    "@postplan/eslint-plugin": "file:./packages/eslint-plugin",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.0",
    "localtunnel": "^2.0.2",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.41.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "supabase": "^1.183.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
