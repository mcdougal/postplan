{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ES2023"],
    "module": "node16",
    "moduleResolution": "Node16",
    "paths": {
      "@/common/*": ["../common/src/*"],
      "@/db/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "**/*.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules"]
}
